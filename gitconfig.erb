[user]
	name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
	email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[github]
	user = <%= print("GitHub Username: "); STDOUT.flush; STDIN.gets.chomp %>
#	token = <%#= print("GitHub API Token: "); STDOUT.flush; STDIN.gets.chomp %>

[alias]
  st = status -sb
  df = diff
  co = checkout
  ci = commit
  br = branch
  lg = log -p
  lol = log --graph --pretty=oneline --abbrev-commit --decorate
  lola = log --graph --pretty=oneline --abbrev-commit --decorate --all

[color]
  diff = auto
  status = auto
  branch = auto

#[core]
#  autocrlf = true
#  safecrlf = false

[diff]
  <%# # Check for existance of meld before setting it as the diff %>
  <% if `which meld` !~ /\A\s*\Z/ %>
    # Use meld for diff
    external = $HOME/.git/diff-meld.sh
  <%# elsif `which opendiff` !~ /\A\s*\Z/ %>
    # Use opendiff for diff
    external = $HOME/.git/diff-opendiff.sh
  <% end %>

